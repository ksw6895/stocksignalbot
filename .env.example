# FMP (Financial Modeling Prep) API Configuration
# Get your API key from: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_api_key_here

# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Market Cap Filter (in USD)
MIN_MARKET_CAP=500000000       # $500M
MAX_MARKET_CAP=50000000000     # $50B

# Trading Parameters
TP_RATIO=0.07                   # Take Profit: 7%
SL_RATIO=0.03                   # Stop Loss: 3%

# Scanning Configuration
SCAN_INTERVAL=3600              # Scan every hour (in seconds)
SCAN_MARKET_HOURS_ONLY=true    # Only scan during market hours

# FMP API Limits
FMP_DAILY_LIMIT=250             # Free tier: 250, Starter: 750

# Technical Indicators
EMA_SHORT_PERIOD=20             # Short-term EMA period
EMA_LONG_PERIOD=50              # Long-term EMA period

# Stock Filters
MIN_VOLUME=100000               # Minimum daily volume
MIN_PRICE=5.0                   # Minimum stock price
MAX_PRICE=500.0                 # Maximum stock price

# Performance Settings
BATCH_SIZE=20                   # Process stocks in batches
CACHE_DURATION=3600             # Cache duration in seconds

# Render Deployment
PORT=10000                      # Web server port for Render

# Admin Settings (Optional)
ADMIN_TOKEN=your_secret_admin_token  # For protected endpoints

# Logging
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR